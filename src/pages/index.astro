			<!-- Projects Placeholder -->
			<section class="py-20 bg-slate-100">
				<div class="container mx-auto px-4">
					<div class="text-center mb-16">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>Our Projects</span
						>
						<h2 class="text-3xl font-bold text-slate-800 mt-2">
							Success Stories
						</h2>
					</div>

					<div
						class="bg-white rounded-tr-3xl rounded-bl-3xl p-12 text-center shadow-lg max-w-xl mx-auto"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-16 w-16 text-orange-500 mx-auto mb-6 opacity-50"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
