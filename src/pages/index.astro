---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50">
		<Header />
		<main>
			<!-- Hero Section -->
			<section
				class="relative bg-gradient-to-br from-slate-900 to-slate-800 text-white overflow-hidden"
			>
				<div
					class="absolute right-0 top-0 w-1/3 h-full bg-orange-500 clip-path-hero opacity-90"
				>
				</div>
				<div
					class="container mx-auto px-4 py-20 md:py-32 relative z-10"
				>
					<div class="max-w-2xl">
						<h1
							class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6"
						>
							Technology with <span class="text-orange-500"
								>Wisdom</span
							>
						</h1>
						<p class="text-xl mb-8 text-slate-200">
							Building smart and strategic tech solutions for
							modern businesses that drive sustainable growth.
						</p>
						<div class="flex flex-wrap gap-4">
							<a
								href="#contact"
								class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-md font-medium transition-colors shadow-lg"
							>
								Get a Free Consultation
							</a>
							<a
								href="#services"
								class="bg-transparent border-2 border-white hover:bg-white/10 text-white px-6 py-3 rounded-md font-medium transition-colors"
							>
								Explore Our Services
							</a>
						</div>
					</div>
				</div>
				<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
			</section>

			<!-- About Us Section -->
			<section id="about" class="py-20 bg-white">
				<div class="container mx-auto px-4">
					<div class="text-center mb-16">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>About Us</span
						>
						<h2 class="text-3xl font-bold text-slate-800 mt-2">
							Who We Are
						</h2>
					</div>

					<div
						class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
					>
						<div class="relative">
							<div
								class="bg-orange-500 w-64 h-64 md:w-80 md:h-80 rounded-tr-3xl rounded-bl-3xl"
							>
							</div>
							<div
								class="absolute inset-0 transform translate-x-8 translate-y-8"
							>
								<div
									class="bg-slate-800 w-64 h-64 md:w-80 md:h-80 rounded-tr-3xl rounded-bl-3xl shadow-xl flex items-center justify-center"
								>
									<span
										class="text-5xl font-bold text-orange-500"
										>W</span
									>
								</div>
							</div>
						</div>

						<div>
							<h3 class="text-2xl font-bold text-slate-800 mb-4">
								WicaksanaTech
							</h3>
							<p class="text-slate-600 mb-6">
								WicaksanaTech is a digital technology agency
								committed to building smart and strategic tech
								solutions for modern businesses. Rooted in the
								spirit of wisdom and innovation, we help
								companies navigate the digital era with
								professional, efficient, and impactful services.
							</p>
							<p class="text-slate-600 mb-8">
								We believe that technology is not just a tool,
								but a trusted partner in sustainable growth.
								With a team of experienced professionals in
								software development, IT infrastructure, and
								digital business strategy, WicaksanaTech aims to
								be your reliable and wise technology partner.
							</p>

							<div class="flex gap-6">
								<div>
									<div
										class="text-orange-500 font-bold text-xl mb-1"
									>
										Wisdom
									</div>
									<p class="text-slate-600">
										Strategic thinking in every solution
									</p>
								</div>
								<div>
									<div
										class="text-orange-500 font-bold text-xl mb-1"
									>
										Innovation
									</div>
									<p class="text-slate-600">
										Cutting-edge approaches
									</p>
								</div>
								<div>
									<div
										class="text-orange-500 font-bold text-xl mb-1"
									>
										Reliability
									</div>
									<p class="text-slate-600">
										Consistently delivering quality
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
