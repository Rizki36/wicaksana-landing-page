			<!-- Vision Section -->
			<section class="py-20 bg-slate-900">
				<div class="container mx-auto px-4">
					<div class="text-center mb-12">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>Our Vision</span
						>
						<h2 class="text-3xl font-bold text-white mt-2">
							Looking Forward
						</h2>
					</div>

					<div class="max-w-3xl mx-auto text-center">
						<blockquote class="relative">
							<div
								class="text-6xl text-orange-500 absolute -top-8 left-0"
							>
								"
							</div>
							<p
								class="text-xl md:text-2xl text-white italic leading-relaxed relative z-10 px-8"
							>
								To become a trusted technology agency that
								prioritizes wisdom in innovation, delivering
								impactful, sustainable, and relevant digital
								solutions for the future.
							</p>
							<div
								class="text-6xl text-orange-500 absolute -bottom-8 right-0"
							>
								"
							</div>
						</blockquote>
					</div>
				</div>
			</section>

			<!-- Services Section -->
			<section id="services" class="py-20 bg-white">
