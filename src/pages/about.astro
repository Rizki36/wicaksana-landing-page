---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead
			title={`About Us - ${SITE_TITLE}`}
			description="Learn more about WicaksanaTech's mission, vision, and values. We are a digital technology agency committed to building smart and strategic tech solutions."
		/>
	</head>
	<body class="bg-slate-50">
		<Header />
		<main>
			<!-- Hero Section -->
			<section
				class="relative bg-gradient-to-br from-slate-900 to-slate-800 text-white overflow-hidden"
			>
				<div
					class="absolute right-0 top-0 w-1/3 h-full bg-orange-500 clip-path-hero opacity-90"
				>
				</div>
				<div
					class="container mx-auto px-4 py-20 md:py-28 relative z-10"
				>
					<div class="max-w-3xl">
						<h1
							class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6"
						>
							About <span class="text-orange-500"
								>WicaksanaTech</span
							>
						</h1>
						<p class="text-xl mb-8 text-slate-200">
							A digital technology agency with wisdom at its core,
							building solutions that create real impact.
						</p>
					</div>
				</div>
				<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
			</section>

			<!-- Company Description Section -->
			<section class="py-20 bg-white">
				<div class="container mx-auto px-4">
					<div
						class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
					>
						<div>
							<span
								class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
								>Our Story</span
							>
							<h2
								class="text-3xl font-bold text-slate-800 mt-2 mb-6"
							>
								Technology with Purpose
							</h2>
							<p class="text-slate-600 mb-6">
								WicaksanaTech is a digital technology agency
								committed to building smart and strategic tech
								solutions for modern businesses. Rooted in the
								spirit of wisdom and innovation, we help
								companies navigate the digital era with
								professional, efficient, and impactful services.
							</p>
							<p class="text-slate-600 mb-6">
								We believe that technology is not just a tool,
								but a trusted partner in sustainable growth.
								With a team of experienced professionals in
								software development, IT infrastructure, and
								digital business strategy, WicaksanaTech aims to
								be your reliable and wise technology partner.
							</p>
							<div class="mt-8">
								<a
									href="#contact"
									class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-md font-medium transition-colors shadow-lg"
								>
									Partner With Us
								</a>
							</div>
						</div>
						<div class="relative">
							<div
								class="bg-slate-100 rounded-tr-3xl rounded-bl-3xl p-8 shadow-xl relative z-10"
							>
								<div class="flex items-center mb-6">
									<div
										class="bg-orange-500 h-12 w-1.5 mr-4 rounded-sm"
									>
									</div>
									<h3
										class="text-2xl font-bold text-slate-800"
									>
										Our Approach
									</h3>
								</div>
								<p class="text-slate-600 mb-6">
									At WicaksanaTech, we combine technical
									expertise with strategic thinking to deliver
									solutions that truly matter for your
									business.
								</p>
								<ul class="space-y-4">
									<li class="flex items-start">
										<div
											class="bg-orange-100 rounded-full p-1 mt-1 mr-3"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												class="h-4 w-4 text-orange-500"
												viewBox="0 0 20 20"
												fill="currentColor"
											>
												<path
													fill-rule="evenodd"
													d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
													clip-rule="evenodd"></path>
											</svg>
										</div>
										<span class="text-slate-700"
											>Strategic planning before
											implementation</span
										>
									</li>
									<li class="flex items-start">
										<div
											class="bg-orange-100 rounded-full p-1 mt-1 mr-3"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												class="h-4 w-4 text-orange-500"
												viewBox="0 0 20 20"
												fill="currentColor"
											>
												<path
													fill-rule="evenodd"
													d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
													clip-rule="evenodd"></path>
											</svg>
										</div>
										<span class="text-slate-700"
											>Collaborative development process</span
										>
									</li>
									<li class="flex items-start">
										<div
											class="bg-orange-100 rounded-full p-1 mt-1 mr-3"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												class="h-4 w-4 text-orange-500"
												viewBox="0 0 20 20"
												fill="currentColor"
											>
												<path
													fill-rule="evenodd"
													d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
													clip-rule="evenodd"></path>
											</svg>
										</div>
										<span class="text-slate-700"
											>Focus on long-term sustainability</span
										>
									</li>
									<li class="flex items-start">
										<div
											class="bg-orange-100 rounded-full p-1 mt-1 mr-3"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												class="h-4 w-4 text-orange-500"
												viewBox="0 0 20 20"
												fill="currentColor"
											>
												<path
													fill-rule="evenodd"
													d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
													clip-rule="evenodd"></path>
											</svg>
										</div>
										<span class="text-slate-700"
											>Continuous improvement through
											feedback</span
										>
									</li>
								</ul>
							</div>
							<div
								class="absolute -bottom-4 -left-4 w-64 h-64 bg-orange-500/20 rounded-tr-3xl rounded-bl-3xl -z-10"
							>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Vision Section -->
			<section class="py-20 bg-slate-100">
				<div class="container mx-auto px-4">
					<div class="max-w-3xl mx-auto">
						<div class="text-center mb-12">
							<span
								class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
								>Our Vision</span
							>
							<h2 class="text-3xl font-bold text-slate-800 mt-2">
								Looking Forward
							</h2>
						</div>

						<div
							class="bg-white rounded-tr-3xl rounded-bl-3xl p-10 shadow-lg relative overflow-hidden"
						>
							<div
								class="absolute -top-10 -left-10 w-40 h-40 bg-orange-500/10 rounded-full"
							>
							</div>
							<div
								class="absolute -bottom-10 -right-10 w-40 h-40 bg-orange-500/10 rounded-full"
							>
							</div>

							<blockquote class="relative z-10">
								<div
									class="text-6xl text-orange-500 absolute -top-8 left-0"
								>
									"
								</div>
								<p
									class="text-xl md:text-2xl text-slate-700 italic leading-relaxed relative z-10 px-8 text-center"
								>
									To become a trusted technology agency that
									prioritizes wisdom in innovation, delivering
									impactful, sustainable, and relevant digital
									solutions for the future.
								</p>
								<div
									class="text-6xl text-orange-500 absolute -bottom-8 right-0"
								>
									"
								</div>
							</blockquote>
						</div>
					</div>
				</div>
			</section>

			<!-- Core Values Section -->
			<section class="py-20 bg-white">
				<div class="container mx-auto px-4">
					<div class="text-center mb-16">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>Our Core Values</span
						>
						<h2 class="text-3xl font-bold text-slate-800 mt-2">
							What Drives Us
						</h2>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<!-- Value 1 -->
						<div
							class="bg-gradient-to-br from-slate-900 to-slate-800 text-white rounded-tr-3xl rounded-bl-3xl p-8 shadow-lg hover:shadow-xl transition-shadow transform hover:-translate-y-1 duration-300"
						>
							<div
								class="bg-orange-500/20 rounded-full w-16 h-16 flex items-center justify-center mb-6"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-8 w-8 text-orange-500"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
									></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold mb-3">Wisdom</h3>
							<p class="text-slate-300">
								We combine deep technical knowledge with
								strategic thinking to make informed decisions.
								Wisdom guides our approach to every project,
								ensuring solutions that are not just innovative,
								but also appropriate and sustainable.
							</p>
						</div>

						<!-- Value 2 -->
						<div
							class="bg-white border border-slate-200 rounded-tr-3xl rounded-bl-3xl p-8 shadow-lg hover:shadow-xl transition-shadow transform hover:-translate-y-1 duration-300"
						>
							<div
								class="bg-orange-100 rounded-full w-16 h-16 flex items-center justify-center mb-6"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-8 w-8 text-orange-500"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M13 10V3L4 14h7v7l9-11h-7z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-slate-800 mb-3">
								Innovation
							</h3>
							<p class="text-slate-600">
								We embrace new technologies and methodologies to
								create cutting-edge solutions. Innovation is at
								the heart of what we do, but we ensure it serves
								a purpose and solves real problems rather than
								technology for its own sake.
							</p>
						</div>

						<!-- Value 3 -->
						<div
							class="bg-white border border-slate-200 rounded-tr-3xl rounded-bl-3xl p-8 shadow-lg hover:shadow-xl transition-shadow transform hover:-translate-y-1 duration-300"
						>
							<div
								class="bg-orange-100 rounded-full w-16 h-16 flex items-center justify-center mb-6"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-8 w-8 text-orange-500"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
									></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-slate-800 mb-3">
								Reliability
							</h3>
							<p class="text-slate-600">
								We deliver what we promise, when we promise it.
								Reliability means building trust with our
								clients through consistent quality, transparent
								communication, and dependable support throughout
								the project lifecycle.
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Work Process -->
			<section class="py-20 bg-slate-100">
				<div class="container mx-auto px-4">
					<div class="text-center mb-16">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>Our Process</span
						>
						<h2 class="text-3xl font-bold text-slate-800 mt-2">
							How We Work
						</h2>
					</div>

					<div class="relative">
						<!-- Process Timeline Line -->
						<div
							class="absolute left-1/2 top-0 bottom-0 w-0.5 bg-slate-300 hidden md:block"
						>
						</div>

						<!-- Process Steps -->
						<div class="space-y-12 relative">
							<!-- Step 1 -->
							<div class="flex flex-col md:flex-row items-center">
								<div
									class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0"
								>
									<h3
										class="text-xl font-bold text-slate-800 mb-3"
									>
										Discovery & Planning
									</h3>
									<p class="text-slate-600">
										We start by understanding your business,
										goals, and challenges. This phase
										includes in-depth discussions, research,
										and strategy sessions to outline the
										project scope and requirements.
									</p>
								</div>
								<div
									class="bg-orange-500 rounded-full w-12 h-12 flex items-center justify-center text-white font-bold z-10 mx-auto md:mx-0"
								>
									1
								</div>
								<div class="md:w-1/2 md:pl-12 mt-8 md:mt-0">
								</div>
							</div>

							<!-- Step 2 -->
							<div class="flex flex-col md:flex-row items-center">
								<div
									class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0 order-1 md:order-2"
								>
								</div>
								<div
									class="bg-orange-500 rounded-full w-12 h-12 flex items-center justify-center text-white font-bold z-10 mx-auto md:mx-0 order-2 md:order-1"
								>
									2
								</div>
								<div
									class="md:w-1/2 md:pl-12 order-3 mt-8 md:mt-0"
								>
									<h3
										class="text-xl font-bold text-slate-800 mb-3"
									>
										Design & Prototype
									</h3>
									<p class="text-slate-600">
										We develop wireframes, mockups, and
										interactive prototypes to visualize the
										solution. This collaborative phase
										ensures your feedback is incorporated
										before development begins.
									</p>
								</div>
							</div>

							<!-- Step 3 -->
							<div class="flex flex-col md:flex-row items-center">
								<div
									class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0"
								>
									<h3
										class="text-xl font-bold text-slate-800 mb-3"
									>
										Development & Testing
									</h3>
									<p class="text-slate-600">
										Our development team brings the designs
										to life using modern technologies and
										best practices. Thorough testing ensures
										functionality, performance, and security
										meets our high standards.
									</p>
								</div>
								<div
									class="bg-orange-500 rounded-full w-12 h-12 flex items-center justify-center text-white font-bold z-10 mx-auto md:mx-0"
								>
									3
								</div>
								<div class="md:w-1/2 md:pl-12 mt-8 md:mt-0">
								</div>
							</div>

							<!-- Step 4 -->
							<div class="flex flex-col md:flex-row items-center">
								<div
									class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0 order-1 md:order-2"
								>
								</div>
								<div
									class="bg-orange-500 rounded-full w-12 h-12 flex items-center justify-center text-white font-bold z-10 mx-auto md:mx-0 order-2 md:order-1"
								>
									4
								</div>
								<div
									class="md:w-1/2 md:pl-12 order-3 mt-8 md:mt-0"
								>
									<h3
										class="text-xl font-bold text-slate-800 mb-3"
									>
										Launch & Support
									</h3>
									<p class="text-slate-600">
										We ensure a smooth deployment and
										provide ongoing support to keep your
										solution running optimally. Our
										relationship continues beyond launch
										with maintenance and growth options.
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Team Section Placeholder -->
			<section class="py-20 bg-white">
				<div class="container mx-auto px-4">
					<div class="text-center mb-16">
						<span
							class="text-orange-500 font-semibold text-sm tracking-wide uppercase"
							>Our Team</span
						>
						<h2 class="text-3xl font-bold text-slate-800 mt-2">
							The People Behind WicaksanaTech
						</h2>
						<p class="text-slate-600 mt-4 max-w-2xl mx-auto">
							Our diverse team of experts combines technological
							expertise with business strategy to deliver
							exceptional results.
						</p>
					</div>

					<div
						class="bg-slate-100 rounded-tr-3xl rounded-bl-3xl p-12 text-center shadow-lg max-w-xl mx-auto"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-16 w-16 text-orange-500 mx-auto mb-6 opacity-50"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
							></path>
						</svg>
						<h3 class="text-2xl font-bold text-slate-800 mb-3">
							Meet Our Experts Soon
						</h3>
						<p class="text-slate-600 mb-6">
							We're currently updating our team profile section.
							Check back soon to meet the talented individuals who
							make WicaksanaTech's vision a reality.
						</p>
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section
				class="py-20 bg-gradient-to-br from-slate-900 to-slate-800 text-white"
			>
				<div class="container mx-auto px-4">
					<div class="max-w-3xl mx-auto text-center">
						<h2 class="text-3xl md:text-4xl font-bold mb-4">
							Ready to Transform Your Business?
						</h2>
						<p class="text-xl text-slate-300 mb-8">
							Let's collaborate to build technology solutions that
							drive your company forward.
						</p>
						<div class="flex flex-wrap justify-center gap-4">
							<a
								href="../#contact"
								class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-md font-medium text-lg transition-colors shadow-lg inline-flex items-center"
							>
								Contact Us
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-5 w-5 ml-2"
									viewBox="0 0 20 20"
									fill="currentColor"
								>
									<path
										fill-rule="evenodd"
										d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"></path>
								</svg>
							</a>
							<a
								href="../#services"
								class="bg-transparent border-2 border-white hover:bg-white/10 text-white px-8 py-4 rounded-md font-medium text-lg transition-colors inline-block"
							>
								Explore Services
							</a>
						</div>
					</div>
				</div>
			</section>
		</main>

		<style>
			.clip-path-hero {
				clip-path: polygon(100% 0, 100% 100%, 0 100%);
			}

			.bg-grid-pattern {
				background-image: linear-gradient(
						rgba(255, 255, 255, 0.05) 1px,
						transparent 1px
					),
					linear-gradient(
						90deg,
						rgba(255, 255, 255, 0.05) 1px,
						transparent 1px
					);
				background-size: 20px 20px;
			}
		</style>

		<Footer />
	</body>
</html>
